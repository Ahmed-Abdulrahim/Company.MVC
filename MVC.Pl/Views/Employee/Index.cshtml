@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>
<a asp-action="Create" class="btn btn-primary m-5">Create Employee</a>
<table class="table table-bordered table-hover text-center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>IsActive</th>
            <th>IsDeleted</th>
            <th>Department Name</th>
            <th>@Html.DisplayNameFor(E=>E.HiringDate)</th>
            <th>@Html.DisplayNameFor(E=>E.CreatedAt)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.Departments?.Name</td>
                    <td>@item.HiringDate</td>
                    <td>@item.CreatedAt</td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="13">
                    <h4 class="text-danger"> There is No Employess :(</h4>
                </td>
            </tr>
        }
    </tbody>
</table>
