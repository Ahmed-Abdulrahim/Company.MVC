
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>AllDepartment</h1>
<a asp-action="Create" class="btn btn-primary m-5">Create Department</a>
<table class="table table-bordered table-hover text-center">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>CreatedAt</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td >@item.Code</td>
                    <td >@item.Name</td>
                    <td>@item.CreatedAt.Date.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <h4 class="text-danger"> There is No Department :(</h4>
                </td>
            </tr>
        }
    </tbody>
</table>